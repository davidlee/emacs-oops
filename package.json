{
  "name": "nau",
  "version": "1.0.0",
  "description": "time and attention management.",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --loader tsx --test-reporter spec --test test/*.ts",
    "mon": "npx nodemon",
    "build": "rimraf ./build && tsc",
    "start": "pnpm run build && node build/index.js",
    "lint": "pnpm exec eslint . --ext .ts",
    "prettier": "pnpm exec prettier --config .prettierrc -w 'src/**/*.ts' 'test/**/*.ts'",
    "prettier-check": "pnpm exec prettier --config .prettierrc -c 'src/**/*.ts' 'test/**/*.ts'",
    "prettier-watch": "pnpm exec onchange 'src/**/*.ts' 'test/**/*.ts' -- pnpm exec prettier --config .prettierrc -w {{changed}}",
    "watch": "pnpm exec tsx --test --watch --test-reporter spec test/test.ts",
    "prepare": "pnpm run prettier & pnpm run lint && pnpm test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "pnpm run test && pnpm run prettier"
    }
  },
  "keywords": [],
  "author": "",
  "license": "non",
  "devDependencies": {
    "@types/node": "^20.5.1",
    "@types/nodemon": "^1.19.2",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^4.2.0",
    "husky": "^8.0.3",
    "nodemon": "^2.0.22",
    "onchange": "^7.1.0",
    "pnpm": "^8.6.12",
    "prettier": "^2.8.8",
    "rimraf": "^3.0.2",
    "shelljs": "^0.8.5",
    "ts-node": "^10.9.1",
    "tsx": "^3.12.7",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "blessed": "^0.1.81",
    "chalk": "^5.3.0",
    "commander": "^11.0.0",
    "esbuild": "0.19.2",
    "lowdb": "^6.0.1",
    "ts-fp": "^1.0.0"
  },
  "pnpm": {
    "overrides": {
      "semver@>=7.0.0 <7.5.2": ">=7.5.2"
    }
  }
}
