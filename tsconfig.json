{
  "compilerOptions": {
    "target": "es2022",
    "module": "esnext",
    "lib": ["esnext", "esnext.disposable"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "allowJs": true,    
    "checkJs": false, 
    "moduleResolution": "node",
    "types": ["node", "argParse","ramda"],
    "skipLibCheck": true,
    "declaration": true,
    "forceConsistentCasingInFileNames": true,
    "plugins": [
      {
        "name": "@effect/language-service"
      }
    ]
  },
  "include": ["src/*.js", "src/**/*.js", "src/*.ts", "src/**/*.ts"],
  "exclude": ["test/*"]
}
