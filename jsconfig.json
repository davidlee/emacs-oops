{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "lib": ["esnext"],
    "outDir": "build",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "allowJs": true,    
    "checkJs": false,    
    "moduleResolution": "node",
    "types": ["node"],
    "skipLibCheck": true,
  },
  "include": ["**/*.ts"],
  "exclude": ["test/*"]
}
